{
  "name": "dir-tree-gen",
  "displayName": "Directory Tree Generator",
  "description": "Generate directory tree structures from the context menu",
  "version": "1.0.0",
  "publisher": "FalloutGhoulBusta",
  "repository": {
    "type": "git",
    "url": "https://github.com/FalloutGhoulBusta/dir-tree-gen.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dir-tree-gen.generateTree"
  ],

  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dir-tree-gen.generateTree",
        "title": "Generate Directory Tree"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dir-tree-gen.generateTree",
          "group": "navigation@1",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "compile": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --mode development --devtool inline-source-map --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1"
  }
}
